<%= provide :title, @news.title %>
<div id="breadcrumb" class="full-breadcrumb">
  <div class="container">
    <div class="header-page row">
      <div class="title-page col-md-6 col-sm-6">
        <h2><%= t ".news_details" %></h2>
      </div>
      <div class="breadcrumbs col-md-6 col-sm-6">
        <ul>
          <li><%= link_to t(".home"), root_path %></li>
          <li><%= link_to t(".news"), news_index_path %></li>
          <li class="active"><span><%= t ".news_details" %></span></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="main-content" class="full-content">
  <div class="container">
    <div class="row">
      <%= render "news_detail", news: @news %>
      <%= render "courses/right_sidebar_course" %>
    </div>
  </div>
</div>
