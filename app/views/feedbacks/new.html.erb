<%= provide :title, t(".title") %>

<div id="breadcrumb" class="full-breadcrumb">
  <div class="container">
    <div class="header-page row">
      <div class="title-page col-md-6 col-sm-6">
        <h2><%= t ".title" %></h2>
      </div>
      <div class="breadcrumbs col-md-6 col-sm-6">
        <ul>
          <li><%= link_to t(".home"), root_path %></li>
          <li class="active"><span><%= t ".title" %></span></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="main-content" class="full-content">
  <div class="container">
    <div class="contact-page">
      <div class="full-address">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#fullmap" aria-expanded="false" aria-controls="fullmap">
          <img alt="map" src="/images/ic-map.png"> <span><%= t ".map" %></span>
        </button>
        <div id="fullmap" class="maps navbar-collapse collapse">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.400097552718!2d105.7795971510368!3d21.016671285936134!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313454aad38b5685%3A0xd5e1b0d5abacb8f6!2sAwesome+Academy!5e0!3m2!1sen!2s!4v1507091655099" width="1086" height="407" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="address-box">
          <img src="/images/logo-contact.png">
          <p><%= t ".framgia_address" %></p>
          <p class="tel"><a href="tel:<%= Settings.framgia.phone_number %>">
            <%= Settings.framgia.phone_text %></a></p>
          <a class="email" href="mailto:<%= Settings.framgia.email %>">
            <%= Settings.framgia.email %></a>
        </div>
      </div>
      <div class="contact-form">
        <p class="notice"><%= t ".title_text1" %><br/><%= t ".title_text2" %></p>
        <%= render "form", feedback: @feedback %>
      </div>
    </div>
  </div>
</div>
