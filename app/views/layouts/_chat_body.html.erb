<% if cookies[:room_id].present? %>
  <div id="list-messages">
    <% if @messages.present? %>
      <%= render partial: "messages/message", collection: @messages, as: :message %>
    <% else %>
      <div class="chat-message">
        <div class="chat-avatar">
          <%=image_tag "supporter", class: "chat-avatar-img" %>
        </div>
        <div class="chat-content">
          <div class="chat-content-inner">
            <p class="chat-text"><%= t ".hello" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render partial: "chat_rooms/form", locals: {chat_room: ChatRoom.new} %>
<% end %>
